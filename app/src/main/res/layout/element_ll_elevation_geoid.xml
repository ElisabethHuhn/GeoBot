<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android               = "http://schemas.android.com/apk/res/android"
          android:orientation   = "vertical"
          android:layout_width  = "match_parent"
          android:layout_height = "wrap_content"
          android:paddingBottom = "5dp"
    >

    <!-- Elevation/Geoid input fields -->


    <!-- Elevation  -->
    <LinearLayout
        android:layout_width        = "match_parent"
        android:layout_height       = "wrap_content"
        android:orientation         = "horizontal"
        android:layout_marginBottom = "5dp"

        >
        <!-- Elevation  -->
        <TextView
            android:text          = "@string/elevation_label"
            android:layout_height = "wrap_content"
            android:layout_width  = "0dp"
            android:layout_weight = "15"

            android:gravity       = "end"
            android:layout_marginStart="@dimen/row_cap_margin"

            android:textColor     = "@color/colorTextBlack"
            android:background    = "@color/colorScreenBackground"
            />
        <EditText
            android:id               = "@+id/elevationMetersInput"
            android:hint             = "@string/type_elevation_label"
            android:layout_gravity   = "center_horizontal"
            android:gravity          = "center"
            android:layout_height    = "wrap_content"
            android:layout_width     = "0dp"
            android:layout_weight    = "70"

            android:layout_marginEnd = "@dimen/row_between_fields_margin"
            android:enabled          = "false"

            android:inputType        = "numberSigned|numberDecimal"

            android:textColor        = "@color/colorTextBlack"
            android:background       = "@color/colorGrayish"
            />

    </LinearLayout>

    <!-- Geoid Height  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <!-- Geoid Height  -->
        <TextView
            android:text          = "@string/geoid_height_label"
            android:layout_height = "wrap_content"
            android:layout_width  = "0dp"
            android:layout_weight = "17"

            android:gravity       = "end"

            android:textColor     = "@color/colorTextBlack"
            android:background    = "@color/colorScreenBackground"
            />

        <EditText
            android:id               = "@+id/geoidHeightMetersInput"
            android:hint             = "@string/type_geoid_height_label"
            android:layout_gravity   = "center_horizontal"
            android:gravity          = "center"
            android:layout_height    = "wrap_content"
            android:layout_width     = "0dp"
            android:layout_weight    = "70"

            android:layout_marginEnd = "@dimen/row_between_fields_margin"
            android:enabled="false"

            android:inputType        = "numberSigned|numberDecimal"

            android:textColor        = "@color/colorTextBlack"
            android:background       = "@color/colorGrayish"
            />

    </LinearLayout>



</LinearLayout>