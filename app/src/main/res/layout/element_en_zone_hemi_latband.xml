<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android               = "http://schemas.android.com/apk/res/android"
          android:orientation   = "horizontal"
          android:layout_width  = "match_parent"
          android:layout_height = "wrap_content"
          android:layout_marginBottom="@dimen/row_between_rows_margin"
    >

    <!-- zone hemispheres latband input fields -->
    <!-- label -->
    <TextView
        android:id            = "@+id/coord_label"
        android:text          = "@string/zone_label"
        android:layout_height = "wrap_content"
        android:layout_width  = "0dp"
        android:layout_weight = "25"
        android:gravity       = "end"

        android:textColor     = "@color/colorTextBlack"
        android:background    = "@color/colorScreenBackground"
        />

    <!-- zone -->
    <EditText
        android:id               = "@+id/zoneOutput"
        android:hint             = "@string/zone_label"
        android:layout_height    = "wrap_content"
        android:layout_width     = "0dp"
        android:layout_weight    = "50"

        android:layout_marginEnd = "@dimen/row_between_fields_margin"
        android:enabled="false"

        android:gravity          = "center"

        android:inputType        = "number"

        android:textColor        = "@color/colorTextBlack"
        android:background       = "@color/colorGrayish"
        />

    <!-- hemisphere -->
    <EditText
        android:id               = "@+id/hemisphereOutput"
        android:hint             = "@string/hemisphere_label"
        android:layout_height    = "wrap_content"
        android:layout_width     = "0dp"
        android:layout_weight    = "50"

        android:layout_marginEnd  = "@dimen/row_between_fields_margin"
        android:enabled="false"

        android:gravity           = "center"

        android:inputType         = "textCapCharacters"
        android:textColor         = "@color/colorTextBlack"
        android:background        = "@color/colorGrayish"

        />

    <!-- LatBand -->
    <EditText
        android:id               = "@+id/latbandOutput"
        android:hint             = "@string/latband_label"
        android:layout_height    = "wrap_content"
        android:layout_width     = "0dp"
        android:layout_weight    = "50"

        android:layout_marginEnd  = "@dimen/row_cap_margin"
        android:enabled="false"

        android:gravity           = "center"

        android:inputType         = "textCapCharacters"
        android:textColor         = "@color/colorTextBlack"
        android:background        = "@color/colorGrayish"
        />

</LinearLayout>