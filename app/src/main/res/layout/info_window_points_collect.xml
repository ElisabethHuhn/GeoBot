<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- This layout defines the desired size -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="320dp"
        android:orientation="vertical">

        <!-- Your views here -->

        <!-- Point ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:labelFor="@+id/iwPointIDOutput"
                android:text="@string/point_screen_id_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"
               

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwPointIDOutput"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- # of Raw Readings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:labelFor="@+id/iwNumRawReadingsOutput"
                android:text="@string/iwcp_number_raw"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"
             

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwNumRawReadingsOutput"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- # of Meaned Readings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:labelFor="@+id/iwNumMeanedReadingsOutput"
                android:text="@string/iwcp_number_meaned"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwNumMeanedReadingsOutput"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- # of fixed readings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:labelFor="@+id/iwNumFixedReadingsOutput"
                android:text="@string/iwcp_number_fixed"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwNumFixedReadingsOutput"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- # of Satellites -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:labelFor="@+id/iwNumSatellitesOutput"
                android:text="@string/iwcp_satellites"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwNumSatellitesOutput"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- Latitude / Northing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/iwLatLabel"
                android:labelFor="@+id/iwLatDD"
                android:text="@string/iwcp_latitude_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />


            <!-- Direction 5 -->
            <TextView
                android:id="@+id/iwLatDir"
                android:hint="@string/type_hemisphere_label"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="center"

                android:enabled="false"

                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"
                />
            <!-- Latitude  70 -->
            <TextView
                android:id="@+id/iwLatDD"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="70"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Degrees 15 -->
            <TextView
                android:id="@+id/iwLatDeg"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="15"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Minutes 15 -->
            <TextView
                android:id="@+id/iwLatMin"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="15"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Seconds 40 -->
            <TextView
                android:id="@+id/iwLatSec"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />


        </LinearLayout>

        <!-- Longitude / Easting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iwLngLabel"
                android:labelFor="@+id/iwLngDD"
                android:text="@string/iwcp_longitude_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />

            <!-- Direction 5 -->
            <TextView
                android:id="@+id/iwLngDir"
                android:hint="@string/type_hemisphere_label"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:gravity="center"

                android:enabled="false"

                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"
                />
            <!-- Latitude  70 -->
            <TextView
                android:id="@id/iwLngDD"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="70"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Degrees 15 -->
            <TextView
                android:id="@+id/iwLngDeg"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="15"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Minutes 15 -->
            <TextView
                android:id="@+id/iwLngMin"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="15"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />
            <!-- Latitude Seconds 40 -->
            <TextView
                android:id="@+id/iwLngSec"

                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="40"

                android:gravity="center"
                android:layout_marginEnd="@dimen/row_between_fields_margin"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorWhite"

                />

        </LinearLayout>

        <!-- Elevation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:labelFor="@+id/iwElevationOutput"
                android:text="@string/iwcp_elevation_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwElevationOutput"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- Standard Deviation Latitude/Northing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iwSdLatNorLabel"
                android:labelFor="@+id/iwSdLatNorOutput"
                android:text="@string/vrms_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwSdLatNorOutput"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- Standard Deviation Longitude / Easting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/iwSdLongEastLabel"
                android:labelFor="@+id/iwSdLongEastOutput"
                android:text="@string/hrms_label"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="35"
                android:gravity="end"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorScreenBackground"
                />
            <TextView
                android:id="@id/iwSdLongEastOutput"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="75"

                android:textColor="@color/colorTextBlack"
                android:background="@color/colorGray"
                />

        </LinearLayout>

        <!-- Standard Deviation Elevation -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iwSdElevationLabel"
            android:labelFor="@+id/iwSdElevationOutput"
            android:text="@string/ele_rms_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="35"
            android:gravity="end"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorScreenBackground"
            />
        <TextView
            android:id="@id/iwSdElevationOutput"

            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="75"

            android:textColor="@color/colorTextBlack"
            android:background="@color/colorGray"
            />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>